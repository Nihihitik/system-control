# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=system_control
DB_USER=postgres
DB_PASSWORD=postgres

# Database URL (composed from above variables in docker-compose)
# Format: postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/system_control

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m

# Application
PORT=3000
NODE_ENV=development
